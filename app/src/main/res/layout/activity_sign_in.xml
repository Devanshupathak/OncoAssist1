<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/android_sma"
    android:layout_width="410dp"
    android:layout_height="730dp"
    android:clipToOutline="true"
    android:background="#FFFFFF"
    >

    <View
        android:id="@+id/vector_1"
        android:layout_width="match_parent"
        android:layout_height="548dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/logshape" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="66dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal|top"
        android:text="@string/sign_in"
        android:textAppearance="@style/sign_in"
        android:textSize="30sp"
        android:textStyle="bold" />

    <android.widget.LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="310dp"
        android:layout_height="57dp"
        android:layout_alignBottom="@+id/vector_1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="332dp"
        android:background="@drawable/bottomnav"
        android:elevation="10sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_email_24"
            android:translationX="20sp"
            android:translationY="20sp" />

        <EditText
            android:id="@+id/etSinInEmail"
            android:layout_width="204dp"
            android:layout_height="match_parent"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/et_text_size"
            android:translationX="50sp" />
    </android.widget.LinearLayout>

    <android.widget.LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="310dp"
        android:layout_height="57dp"
        android:layout_alignBottom="@+id/vector_1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="239dp"
        android:background="@drawable/bottomnav"
        android:elevation="10sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_password_24"
            android:translationX="20sp"
            android:translationY="20sp" />

        <EditText
            android:id="@+id/etSinInPassword"
            android:layout_width="204dp"
            android:layout_height="match_parent"
            android:hint="Password"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/et_text_size"
            android:translationX="50sp" />


    </android.widget.LinearLayout>

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vector_1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="193dp"
        android:text="Forgot Password?"
        android:textColor="@color/blue_4"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignIn"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vector_1"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="122dp"
        android:background="@drawable/button_bg"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="152dp"
        android:text="---or connect with ---"
        android:textColor="#C1C1C1"
        android:textSize="18sp" />

    <Button
        android:id="@+id/googlesbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="95dp"
        android:backgroundTint="@color/blue_5"
        android:elevation="20sp"
        android:text="Login with Google"
        app:icon="@drawable/googleg_standard_color_18" />

    <TextView
        android:id="@+id/tvNewHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="195dp"
        android:layout_marginBottom="54dp"
        android:text="New Here?"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="53dp"
        android:text=" Register"
        android:textColor="@color/blue_5"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>